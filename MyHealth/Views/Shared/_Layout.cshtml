<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyHealth</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">

                @Html.ActionLink("MyHealth", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("User", "Index", "Users", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Logs", "Index", "Logs", new { area = "" }, new { @class = "navbar-brand" })

                @Html.ActionLink("Entries", "Index", "Entries", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Measurements", "Index", "Measurements", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("ScoreCard", "Index", "ScoreCards", new { area = "" }, new { @class = "navbar-brand" })


            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -MyHealth</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html> 